{
  "name": "@bentley/react-hooks",
  "version": "1.2.0",
  "description": "commonly reused generic react hooks for your react applications",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "jest",
    "lint:all": "eslint --ext .js,.ts,.tsx src",
    "lint:fix:all": "eslint --ext .js,.ts,.tsx,.test.tsx,.test.ts --fix src --config \"./.eslintrc.autofix.jsonc\"",
    "format:all": "prettier --write src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/react-hooks"
  },
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.3",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "26.6.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1",
    "react": "^16.13.0",
    "react-dom": "^17.0.1",
    "ts-jest": "26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --config './.eslintrc.autofix.jsonc'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
